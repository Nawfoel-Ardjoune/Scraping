{
  "manifest_version": 3,
  "name": "LinkedIn Profile Scraper",
  "version": "1.0",
  "description": "Scrape LinkedIn profiles and save to a local database",
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "scripting",
    "https://www.linkedin.com/"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/ia16.png",
      "48": "icons/ia64.png",
      "128": "icons/ia128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/search/results/people/*"],
      "js": ["content.js"]
    }
  ]
}
